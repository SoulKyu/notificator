												<button @click="sortBy('avg_duration')" class="flex items-center space-x-1 hover:text-gray-700 dark:hover:text-gray-200 transition-colors">
													<span>Avg Duration</span>
													<span x-html="getSortIcon('avg_duration')"></span>
												</button>
											</th>
											<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
												<button @click="sortBy('total_duration')" class="flex items-center space-x-1 hover:text-gray-700 dark:hover:text-gray-200 transition-colors">
													<span>Total Duration</span>
													<span x-html="getSortIcon('total_duration')"></span>
												</button>
											</th>
											<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
